version: '3.5'

services:
  nginx:
    hostname: nginx
    container_name: nde-nginx
    image: nginx:alpine
    ports:
      - 80:80
      - 443:443
    # links: #not needed
    #   - mail
    volumes:
      - /var/www:/var/www
      - sock:/run/php
      - ./cfg/nginx:/etc/nginx/conf.d
      - ./cfg/nginx/cert:/etc/nginx/cert
      - ./cfg/d.bashrc:/etc/bash.bashrc

  php:
    hostname: php
    container_name: nde-php
    build: 
      context: ./cfg/php
      dockerfile: ./debian/Dockerfile
      args:
        MUID: $MUID
        MGID: $MUID
    user: "www-data:www-data" #Unix only
    # links: #not needed
    #   - mail
    #   - mysql5
    #   - mysql8
    #   - beanstalk
    volumes:
      - /var/www:/var/www
      - sock:/run/php
      - ./cfg/d.bashrc:/etc/bash.bashrc

  mysql5:
    hostname: mysql5
    container_name: nde-mysql-5
    image: mysql:5
    command: 
      - --character-set-server=utf8mb4
      - --collation-server=utf8mb4_unicode_ci
      - --default-authentication-plugin=mysql_native_password
      - --sql_mode=ONLY_FULL_GROUP_BY
    ports:
      - 3306:3306 #for mysql client
    volumes:
      - ./db/mysql5:/var/lib/mysql
      - ./cfg/d.bashrc:/etc/bash.bashrc
    environment:
      MYSQL_ROOT_PASSWORD: secret

  # mysql8:
  #   hostname: mysql8
