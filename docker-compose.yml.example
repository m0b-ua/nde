  #   image: mysql
  #   command:
  #     - --character-set-server=utf8mb4
  #     - --collation-server=utf8mb4_unicode_ci
  #     - --default-authentication-plugin=mysql_native_password
  #     - --sql_mode=ONLY_FULL_GROUP_BY
  #   ports:
  #     - 3308:3306
  #   volumes:
  #     - ./db/mysql8:/var/lib/mysql
  #     - ./cfg/d.bashrc:/etc/bash.bashrc
